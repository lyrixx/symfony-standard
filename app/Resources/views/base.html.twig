<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets -%}

<link rel="stylesheet" type="text/css" href="{{
    asset('bundles/sensiotraining/bootstrap/css/bootstrap.css') }}">

        {%- endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">

            <ul class="breadcrumb">
                {% block breadcrumb %}
                    <li><a href="#">Home</a> <span class="divider">/</span></li>
                {% endblock%}
            </ul>


            {% for level in ['success', 'info', 'error', 'warning'] %}
                {% for message in app.session.flashbag.get(level) %}
                    <div class="fade in alert alert-{{ level }}"
                        <a class="close" href="#">Ã—</a>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}

        </div>
        {% block javascripts %}
            <script src="{{ asset('js/jquery-2.0.3.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
